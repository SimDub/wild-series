{% block body %}
    <div class="media">
        <img class="col-12 col-md-4" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body col-12 col-md-6">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <a class="btn btn-primary" href="{{ path('wild_season')}}/{{ season.id }}" role="button">{{ season.description}}</a>
            {% endfor %}
